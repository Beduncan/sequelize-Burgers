<div class="container text-center">  
  <div class="jumbotron">
    <div class="container jumbo">
      <h1 class="jumbo">Eat-Deez-Burgers</h1>
      <img src="images/images.jpg">
    </div>
</div>
<div class="row">
  <!-- make div to display burgers before and after eaten -->
  <div class="col-lg-1"></div>
  <div class="col-lg-4">
        <ul class="list-group">
        	<!-- this is a handlebars for each function that goes though burgers -->
          {{#each burgers}}
          <!-- this is saying unless the burger has been devoured -->
          	{{#unless this.devoured}}
          	<li class="list-group-item list">
          	   <p>ID: {{this.id}}</p>
               <p>Burger: {{this.burgers}}</p>
               <form action="/update/{{id}}" method="POST">
               			<input type="hidden" name="id" type="text" value={{this.id}}>
               			<button type="submit" class="btn btn-default btn-sm button" name="devoured">Devoure</button>
        			</form>
          	</li>
          	{{/unless}}
          {{/each}}
        </ul>     
  </div>
  <div class="col-lg-2"></div>
  <div class="col-lg-4">
      <ul class="list-group">
       	{{#each burgers}}
          	<!-- if it is devoured placein this input  -->
      		{{#if this.devoured}}
              <li class="list-group-item list">
               <br>    		
               <p>ID: {{this.id}}</p>
               <p>Burger: {{this.burgers}}</p>  
               <br>
              </li>
         {{/if}}
       	{{/each}}
      </ul>
  </div>
  <div class="col-lg-1"></div>
</div> 

<br>
<br>

  <div class="row">
  <div class="col-md-12">
  <!-- a form to add a burger -->
    <div class="row">
      <h2 class="add">Add a Burger</h2>
    </div>
      <form action="./new/burger" method="POST">
  	   <textarea type="text"  class="text" name="burgerName"></textarea>
         <div class="row">
        <button type="submit" class="btn-lg button">Submit</button>
        </div>
      </form>
  </div>
  </div>
<!-- closes container -->
</div>  